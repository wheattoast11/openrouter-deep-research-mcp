# Production Stable Environment Configuration
# For production deployment with v2.1.0 stable behavior

MODE=AGENT
BETA_FEATURES=false  # Disable beta features for stability

# API Keys (production keys)
OPENROUTER_API_KEY=your_openrouter_production_key
SERVER_API_KEY=production-secret

# Server
SERVER_PORT=3000
PUBLIC_URL=https://yourdomain.com
REQUIRE_HTTPS=true
BIND_ADDRESS=0.0.0.0

# Features (stable v2.1)
ZERO_ORCHESTRATOR=true
ASYNC_JOBS=true
WS_STREAMING_ENABLED=true
TOOL_CALL_STREAMING=true

# Beta Features (disabled for stability)
PLL_ENABLE=false
COMPRESSION_ENABLE=false

# Performance (stable defaults)
PARALLELISM=4
ENSEMBLE_SIZE=2

# Storage
PGLITE_DATA_DIR=/data/researchAgentDB
REPORT_OUTPUT_PATH=/data/research_outputs

# Logging
LOG_LEVEL=warn

# Security (production)
ALLOWED_ORIGINS=https://yourdomain.com
RATE_LIMIT_MAX_REQUESTS=100

